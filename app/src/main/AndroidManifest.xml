<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.workouttracker">

    <application
        android:name=".WorkoutApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WorkoutTracker"
        tools:targetApi="31">

        <!-- Main Landing Page Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.WorkoutTracker">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Phase 2 New Activities -->
        <activity
            android:name=".ui.WorkoutActivity"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".ui.ExerciseDetailActivity"
            android:parentActivityName=".ui.WorkoutActivity" />

        <activity
            android:name=".ui.ExerciseLibraryActivity"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".ui.PersonalRecordsActivity"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".ui.SettingsActivity"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".ui.MetconActivity"
            android:parentActivityName=".ui.WorkoutActivity" />

    </application>

</manifest>
